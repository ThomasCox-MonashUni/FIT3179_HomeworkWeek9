{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Programming Languages Used Around the World by Population",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "test",
      "value": "JavaScript",
      "bind": {
        "input": "select",
        "options": [
          "JavaScript",
          "Python",
          "TypeScript",
          "Java",
          "C#",
          "C++",
          "C",
          "PHP",
          "Go",
          "Rust"
        ],
        "labels": [
          "JavaScript",
          "Python",
          "TypeScript",
          "Java",
          "C#",
          "C++",
          "C",
          "PHP",
          "Go",
          "Rust"
        ],
        "name": "Programming Language: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "clean_data.csv"
        },
        "key": "Country",
        "fields": [
          "JavaScript",
          "Python",
          "TypeScript",
          "Java",
          "C#",
          "C++",
          "C",
          "PHP",
          "Go",
          "Rust"
        ]
      }
    },
    {"calculate": "datum[test]", "as": "percent"}
  ],
  "layer": [
    {
      "mark": {"type": "geoshape", "fill": "#fdc998"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "percent", "type": "quantitative", "title": "% of Users"}
        ]
      }
    },
    {
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "percent",
          "type": "quantitative",
          "scale": {
            "domain": [0, 100],
            "scheme":"oranges"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "percent", "type": "quantitative", "title": "% of Users"}
        ]
      }
    }
  ]
  
}